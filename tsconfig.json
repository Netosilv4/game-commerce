{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true                          /* Skip type checking all .d.ts files. */
  },
  "watchOptions": {
    "watchDirectory": "useFsEvents",
    "watchFile": "useFsEvents",
    "excludeDirectories": ["**/node_modules", "dist"]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
